# Environment Configuration for WhatsApp Bot

# Server Configuration
NODE_ENV=development
PORT=3000

# WhatsApp Business Cloud API Configuration
# Get these from: https://developers.facebook.com/apps/
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id_here
WHATSAPP_ACCESS_TOKEN=your_access_token_here

# Webhook Verification Token (you define this)
WEBHOOK_VERIFY_TOKEN=your_custom_verification_token_here

# Claude API Configuration
# Get your API key from: https://console.anthropic.com/
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Confidence Threshold Configuration
# Messages with confidence >= this threshold use deterministic handlers
# Messages below this threshold go to AI fallback
CONFIDENCE_THRESHOLD=70

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=30

# Logging Configuration
LOG_LEVEL=info
# Possible values: error, warn, info, debug

# Business Information (used in responses)
BUSINESS_NAME=ezstorage.sg
BUSINESS_HOURS=Mon-Fri: 9AM-6PM, Sat: 9AM-1PM, Sun: Closed
BUSINESS_LOCATION=123 Storage Street, Singapore 123456
BUSINESS_PHONE=+65 1234 5678
BUSINESS_EMAIL=hello@ezstorage.sg

# Human Escalation Configuration
ESCALATION_PHONE_NUMBER=+65_your_support_number_here
ESCALATION_EMAIL=support@ezstorage.sg
